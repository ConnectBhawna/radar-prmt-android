<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Overview Activity table styles-->
    <style name="DefaultColumn">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Header" parent="DefaultColumn">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">#008</item>
        <item name="android:paddingTop">0dip</item>
    </style>

    <style name="Label" parent="Header">
        <item name="android:paddingTop">11dip</item>
    </style>

    <style name="NumberColumn" parent="DefaultColumn">
    </style>

    <style name="DeviceNameColumn" parent="DefaultColumn">
        <item name="android:gravity">start</item>
    </style>

    <style name="DeviceTypeLabel" parent="DeviceNameColumn">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="ButtonColumn" parent="DefaultColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonDeviceKeyColumn" parent="DefaultColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Manual settings to make the drawable oval round-->
    <!--TODO: should adapt to current column width-->
    <style name="StatusCircle">
        <item name="android:layout_margin">11dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>


</resources>

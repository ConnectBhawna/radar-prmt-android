<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DetailMainActivity">
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content">

            <TableLayout
                android:id="@+id/deviceTable"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:id="@+id/headerRow"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        style="@style/Header"
                        android:text="" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_device" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_device_status" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_battery" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_temp" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_hr" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_acceleration" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_device_key" />

                    <TextView
                        style="@style/Header"
                        android:text="@string/header_scan" />

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/deviceTable"
                android:orientation="vertical">

                <!-- Server status -->
                <TextView
                    android:id="@+id/statusServerLabel"
                    style="@style/ServerStatusLabel"
                    android:text="@string/header_server_status" />

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/statusServer"
                        style="@style/StatusCircle"
                        android:background="@drawable/status_disconnected" />
                    <TextView
                        android:id="@+id/statusServerMessage"
                        style="@style/StatusMessage"
                        android:text="@string/emptyText" />
                </LinearLayout>


                <!-- Firebase status -->
                <TextView
                    android:id="@+id/firebaseStatusLabel"
                    style="@style/ServerStatusLabel"
                    android:text="@string/label_firebase_status"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/firebaseStatus"
                        style="@style/StatusCircle"
                        android:background="@drawable/status_disconnected" />
                    <TextView
                        android:id="@+id/firebaseStatusMessage"
                        style="@style/StatusMessage"
                        android:text="@string/emptyText" />
                </LinearLayout>

                <!-- Source identifier input for all devices -->
                <TextView
                    style="@style/ServerStatusLabel"
                    android:text="@string/label_group_id_input"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/inputGroupId"
                    android:text="Username"/>
                <EditText
                    android:id="@+id/inputGroupId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Hello123"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/inputPassword"
                    android:text="Password"/>
                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Hello123"
                    android:inputType="textPassword" />

            </LinearLayout>


        </RelativeLayout>
    </HorizontalScrollView>
</ScrollView>